    "description": "Helpers for the PHP language",
    "authors": [
        {
            "name": "Kristofer Tengstr√∂m",
            "email": "ordermind@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpspec/prophecy": "^1.9",
        "squizlabs/php_codesniffer": "^3.5",
        "phpmd/phpmd": "^2.8",
        "phpunit/phpunit": "^9.3",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "phpspec/prophecy-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Ordermind\\Helpers\\": "src"
        },
        "files": [
            "src/Misc/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ordermind\\Helpers\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
